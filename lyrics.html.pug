doctype html
html(lang="en")
head
  meta(charset="UTF-8")
  title(Dyrics)
  link(rel="stylesheet" href="dyrics.css")
body
  .content
    input(type="radio" id="toggle-0" name="toggle" checked="checked")
    each song, i in songs
      - if (song.active)
        - var forName = "toggle-" + (i+1)
        input(type="radio" id=forName name="toggle")
    nav.nav
      style(id="searchStyle")
      input(type="text" id="searchbar" placeholder="Search")

      .label-list

        label.toggle(for="toggle-0") ✖

        each song, i in songs
          - if (song.active)
            - var forName = "toggle-" + (i+1)
            label.toggle(data-clue=song.title.toLowerCase() for=forName)
              div.artist= song.title.split(' - ').shift() 
              div.songName= song.title.split(' - ').pop()

    section.song-list
      input.action-input( type="checkbox" data-column="true" checked="" name="display")
      input.action-input( type="checkbox" data-chords="true" checked="" name="display")
      article.song#song-ug
      article.song#song-0
        h1 Yop
script(src="dyrics.js")
