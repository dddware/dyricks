body
  margin: 0
  padding: 0
  font-weight: 400
  line-height: 1.4
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  transition: filter 1s ease-in-out
  &.light
    filter: invert(1)

.content
  display: flex
  align-items: stretch
  justify-content: flex-start
  margin: 0
  background: $dark
  font-family: $font
  color: rgba(#fff,0.9)

.song-list
  flex: 1 1 100%
  height: 100vh
  overflow: hidden
  position: relative
  background: rgba(0, 0, 0, 0.1)
  white-space: pre-line