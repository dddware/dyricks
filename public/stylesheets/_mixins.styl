
@keyframes fallIn
  0%
    opacity 0
    transform perspective(600px) rotateY(-10deg)
  100%
    opacity 1
    transform perspective(600px) rotateY(0)

@keyframes load
  0%
    bottom: 100%

  50%
    height: 100%
    top: 0%

  100%
    top: 100%
    bottom: 0%


@keyframes loadh
  0%
    right: 100%

  50%
    width: 100%
    left: 0%

  100%
    left: 100%
    right: 0%
@keyframes fadeIn
  0%
    opacity: 0
    transform: translateX(-10%)

  100%
    opacity: 1
    transform: translateX(0)
